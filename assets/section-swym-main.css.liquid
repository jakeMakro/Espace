/* Wishlist */

#swym-wishlist-render-container { width:100%; margin:24px 0 64px ; }
#swym-wishlist-render-container .swym-ui-component {width:100%;max-width: 100%;}

#swym-wishlist-render-container .swym-ui-component *, 
#swym-wishlist-render-container .swym-ui-component,
#swym-wishlist-render-container .swym-is-button, 
#swym-wishlist-render-container .swym-ui-component .swym-is-anchor, 
#swym-wishlist-render-container .swym-ui-component .swym-title, 
#swym-wishlist-render-container .swym-ui-component .swym-heading, 
#swym-wishlist-render-container .swym-ui-component .swym-label {  letter-spacing: 0; border: none; }
 

#swym-wishlist-render-container .swym-ui-component .swym-heading {
    color: #000;
    font-size: 35px;
    font-weight: 300;
    font-style: normal;
    letter-spacing: normal;
    line-height: normal;
    text-transform: none;
    }

#swym-wishlist-render-container .swym-ui-component .swym-wishlist-detail-header { display:none; }
#swym-wishlist-render-container .swym-ui-component .swym-wishlist-detail-separator { background:#ececec; }

#swym-wishlist-render-container .swym-ui-component .swym-wishlist-detail-content { margin-top:50px; }
#swym-wishlist-render-container .swym-ui-component .swym-wishlist-detail-content .swym-wishlist-grid { width:100%; margin:0; max-width: 100%; }

#swym-wishlist-render-container .swym-ui-component .swym-wishlist-detail-content .swym-wishlist-item .swym-wishlist-image-wrapper { position:relative; padding-top:100%; 
     margin-bottom: 20px; }
#swym-wishlist-render-container .swym-ui-component .swym-wishlist-detail-content .swym-wishlist-item .swym-wishlist-image-wrapper img { position: absolute;
    left: 50%; top: 50%;  height: 100%; width: 100%; transform: translate(-50%,-50%); object-fit: cover; }

#swym-wishlist-render-container .swym-ui-component .swym-wishlist-detail-content .swym-wishlist-item .swym-title { font-style: normal; white-space: normal;
    font-weight: 400;  font-size: 16px; line-height: 19px; text-transform: lowercase; margin: 0 0 7px 0; text-overflow: ellipsis; display: -webkit-box; -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;  overflow: hidden; display: block; }

#swym-wishlist-render-container .swym-ui-component .swym-wishlist-detail-content .swym-wishlist-item .swym-title:first-letter,
.swym-ui-component .swym-wishlist-product-detail-content .swym-wishlist-product-title:first-letter{ text-transform: uppercase; }

.swym-ui-component .swym-wishlist-product-detail-content .swym-wishlist-product-title{ text-transform: lowercase !important; display: block; }

#swym-wishlist-render-container .swym-ui-component .swym-wishlist-grid .swym-wishlist-item .swym-variant-title { margin:0; } 

#swym-wishlist-render-container .swym-ui-component .swym-wishlist-detail-content .swym-wishlist-item .swym-product-price { font-size: 14px; font-weight: 400;
    font-style: normal; letter-spacing: normal; line-height: 1.29; margin-right: 3px; padding:0; }

#swym-wishlist-render-container .swym-add-to-cart-btn { background-color: #1A1A1A; color: #fff; font-size: 16px; font-weight: 400; text-transform: none;  
    font-style: normal; letter-spacing: normal; text-align: center; margin-top:15px; line-height: 45px; }
#swym-wishlist-render-container .swym-add-to-cart-btn:hover { background-color: #FA817C; color: #fff; }

#swym-wishlist-render-container .swym-ui-component .swym-wishlist-grid .swym-wishlist-item .swym-delete-btn .swym-icon { height: auto; }


@media only screen and (max-width: 900px){
  #swym-wishlist-render-container .swym-is-button.swym-user-login-status .swym-user-text { display: block; }
  
  #swym-wishlist-render-container .swym-wishlist-container-title-bar { padding: 0; height: auto; }
  
  #swym-wishlist-render-container .swym-is-button.swym-user-login-status { top: unset; right: unset; margin-bottom: 15px; }
  
  #swym-wishlist-render-container .swym-ui-component .swym-wishlist-detail-separator { margin-left: 0; margin-right: 0; }
  
  #swym-wishlist-render-container .swym-wishlist-detail-content .swym-empty-wishlist-container,
  #swym-wishlist-render-container .swym-ui-component .swym-wishlist-detail-content .swym-wishlist-grid { padding-left: 0; padding-right: 0; }
}


