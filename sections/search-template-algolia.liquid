      "initial_query": "{% if search.terms %}{{ search.terms }}{% else %} {% endif %}"
    }

  var collection_logos = [
    {% for image in collection.metafields.accentuate.collection_logos %}
      "{{ image.src }}"{% unless forloop.last %},{% endunless %}
    {% endfor %}
  ]
</script>

