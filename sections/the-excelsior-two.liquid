              {
                "type":"text",
                "id":"ptitle1",
                "label":"Title"
              },
              {
                "type":"text",
                "id":"ptext1",
                "label":"Text"
              },
              {
                "type":"header",
                "content":"For Product 2"
              },
              {
                "type":"image_picker",
                "id":"pimg2",
                "label":"Image"
              },
              {
                "type":"text",
                "id":"ptitle2",
                "label":"Title"
              },
              {
                "type":"text",
                "id":"ptext2",
                "label":"Text"
              }
          
        ]
      },
      {
        "type":"range",
        "name":"Title-Text-Range",
        "limit":1,
        "settings":[
          
              {
                "type":"text",
                "id":"title",
                "label":"Sub Title"
              },
              {
                "type":"header",
                "content":"Title 1"
              },
              {
                "type":"text",
                "id":"title1",
                "label":"Title"
              },
              {
                "type":"text",
                "id":"text1",
                "label":"Text"
              },
              {
                "type":"header",
                "content":"Title 2"
              },
              {
                "type":"text",
                "id":"title2",
                "label":"Title"
              },
              {
                "type":"text",
                "id":"text2",
                "label":"Text"
              },
              {
                "type":"header",
                "content":"Text with Range"
              },
              {
                "type": "range",
                "id": "range1",
                "min": 0,
                "max": 100,
                "step": 1,
                "unit": "%",
                "label": "Range 1",
                "default": 100
