{{ 'the-excelsior.css' | asset_url | stylesheet_tag }}

<div class="the-excelsior-wrapper">

<div class="page-width">
   <!--  Excelsior Contents -->
   <div class="cont-wrapper">
      <div class="title-part">
          {% if section.settings.short_title != blank %}
         <h3 class="sub-title">{{ section.settings.short_title }}</h3>
         {% endif %}
         {% if section.settings.head != blank %}
         <h2 class="sec-title">{{ section.settings.head }}</h2>
         {% endif %}
      </div>
      <div class="cont-part">
         {% if section.settings.desc != blank %}
         <div class="content rte">
            {{ section.settings.desc }}
         </div>
         {% endif %}
      </div>
   </div>
   <!-- ALL STAIN Experience -->
   <div class="stain-experience-wrapper">
      {% for block in section.blocks %}
      {% if block.type == 'text' %}
      <div class="stain-item">
          <span class="card-svg">{{ forloop.index }}</span>
         {% if block.settings.subtitle != blank %}
         <h3 class="sub-title">{{ block.settings.subtitle }}</h3>
         {% endif %}
         {% if block.settings.title != blank %}
         <h2 class="item-title">{{ block.settings.title }}</h2>
         {% endif %}
         {% if block.settings.desc != blank or block.settings.tooltiptext != blank %}
         <div class="cont">
            {{ block.settings.desc }}
            <!-- for tooltip -->
            {% if block.settings.tooltiptext != blank and block.settings.tooltip != blank %}
            <div>
               {{ block.settings.tooltiptext }} 
               <div class="com-site-tooltip">
                  <div class="tooltip-wrap info-tooltip">
                     {% render 'info-icon' %}
                     <div class="tooltip-info">{{ block.settings.tooltip }}</div>
                  </div>
               </div>
            </div>
            {% endif %}
         </div>
         {% endif %}
         {% if block.settings.btntext != blank %}
         <div class="note">{{ block.settings.btntext }}</div>
         {% endif %}
      </div>
      {% endif %}
      {% if block.type == 'image' %}
      <div class="stain-item">
          <span class="card-svg">{{ forloop.index }}</span>
         {% if block.settings.subtitle != blank %}
         <h3 class="sub-title">{{ block.settings.subtitle }}</h3>
         {% endif %}
         {% if block.settings.title != blank %}
         <h2 class="item-title">{{ block.settings.title }}</h2>
         {% endif %}
         <div class="kit-list">
            {%- liquid              
              assign sizes = '160'
              assign widths = '100,120,160,200'                    
            -%}
            {% if block.settings.pimg1 != blank or block.settings.ptitle1 != blank or block.settings.ptext1 != blank %}
            <div class="kit-item">
               {% if block.settings.pimg1 != blank %}
               <figure>
                  {%- liquid
                    assign height = block.settings.pimg1.width | divided_by: block.settings.pimg1.aspect_ratio | round                            
                  -%}
                  {{
                    block.settings.pimg1
                    | image_url: width: 160
                    | image_tag: loading: 'lazy', height: height, sizes: sizes, widths: widths, class: _class
                  }}
               </figure>
               {% endif %}
               {% if block.settings.ptitle1 != blank or block.settings.ptext1 != blank %}
               <div class="content">
                  {% if block.settings.ptitle1 != blank %}
                  <h5>{{ block.settings.ptitle1 }}</h5>
                  {% endif %}
                  {% if block.settings.ptext1 != blank %}
                  <span class="info">{{ block.settings.ptext1 }}</span>
                  {% endif %}
               </div>
               {% endif %}
            </div>
            {% endif %}
            {% if block.settings.pimg2 != blank or block.settings.ptitle2 != blank or block.settings.ptext2 != blank %}
            <div class="kit-item">
               {% if block.settings.pimg2 != blank %}
               <figure>
                  {%- liquid
                    assign height = block.settings.pimg2.width | divided_by: block.settings.pimg2.aspect_ratio | round                            
                  -%}
                  {{
                    block.settings.pimg2
                    | image_url: width: 160
                    | image_tag: loading: 'lazy', height: height, sizes: sizes, widths: widths, class: _class
                  }}                 
               </figure>
               {% endif %}
               {% if block.settings.ptitle2 != blank or block.settings.ptext2 != blank %}
               <div class="content">
                  {% if block.settings.ptitle2 != blank %}
                  <h5>{{ block.settings.ptitle2 }}</h5>
                  {% endif %}
                  {% if block.settings.ptext2 != blank %}
                  <span class="info">{{ block.settings.ptext2 }}</span>
                  {% endif %}
               </div>
               {% endif %}
            </div>
            {% endif %}
         </div>
      </div>
      {% endif %}  
      {% if block.type == 'range' %}
      <div class="stain-item {{ block.type }}">
          <span class="card-svg">{{ forloop.index }}</span>
         {% if block.settings.title != blank %}
         <h3 class="sub-title">{{ block.settings.title }}</h3>
         {% endif %}
         {% if block.settings.title1 != blank %}
         <h2 class="item-title">{{ block.settings.title1 }}</h2>
         {% endif %}
         {% if block.settings.text1 != blank %}
         <div class="cont rte">
            <p>{{ block.settings.text1 }}</p>
         </div>
         {% endif %}
         {% if block.settings.title2 != blank %}
         <h3 class="item-title">{{ block.settings.title2 }}</h3>
         {% endif %}
         {% if block.settings.text2 != blank %}
         <div class="cont rte">
            <p>{{ block.settings.text2 }}</p>
         </div>
         {% endif %}
         <div class="process-list-wrapper">
            {% if block.settings.range_title1 != blank or block.settings.range_text1 != blank %}
            <div class="proc-item">
               <div class="bar-item">
                  <span class="bar-thumb" style="width:{{ block.settings.range1 }}%;"></span>
               </div>
               <div class="cont">
                  <div class="name">{{ block.settings.range_title1 }}</div>
                  {% if block.settings.range_text1 != blank %}
                  <span class="times">{{ block.settings.range_text1 }}</span>
                  {% endif %}
               </div>
            </div>
            {% endif %}
            {% if block.settings.range_title2 != blank or block.settings.range_text2 != blank %}
            <div class="proc-item">
               <div class="bar-item">
                  <span class="bar-thumb" style="width:{{ block.settings.range2 }}%;"></span>
               </div>
               <div class="cont">
                  <div class="name">{{ block.settings.range_title2 }}</div>
                  {% if block.settings.range_text2 != blank %}
                  <span class="times">{{ block.settings.range_text2 }}</span>
                  {% endif %}
               </div>
            </div>
            {% endif %}
            {% if block.settings.range_title3 != blank or block.settings.range_text3 != blank %}
            <div class="proc-item">
               <div class="bar-item">
                  <span class="bar-thumb" style="width:{{ block.settings.range3 }}%;"></span>
               </div>
               <div class="cont">
                  <div class="name">{{ block.settings.range_title3 }}</div>
                  {% if block.settings.range_text3 != blank %}
                  <span class="times">{{ block.settings.range_text3 }}</span>
                  {% endif %}
               </div>
            </div>
            {% endif %}
         </div>
      </div>
         {% endif %}
         {% endfor %}        
      </div>
   </div>
</div>


{% schema %}
